<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nsu.cse299parkprovider.SignUp_Driver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park your car securely. Sign up now and find vacant parking spaces near you!"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Name"
            android:textColorHint="#fff"
            android:paddingStart="16dp"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/bg_edit_texts"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="6dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Email"
            android:textColorHint="#fff"
            android:paddingStart="16dp"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/bg_edit_texts"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="6dp"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Phone Number"
            android:textColorHint="#fff"
            android:paddingStart="16dp"
            android:inputType="phone"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/bg_edit_texts"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="6dp"/>

        <EditText
            android:id="@+id/vehicleMake"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Vehicle maker"
            android:textColorHint="#fff"
            android:paddingStart="16dp"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/bg_edit_texts"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="6dp"/>

        <EditText
            android:id="@+id/vehicleModel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Model"
            android:textColorHint="#fff"
            android:paddingStart="16dp"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/bg_edit_texts"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="6dp"/>

        <EditText
            android:id="@+id/licenceNum"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Registration Number"
            android:textColorHint="#fff"
            android:paddingStart="16dp"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/bg_edit_texts"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="6dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="#fff"
            android:background="@drawable/bg_btn_sign_up"
            android:layout_marginTop="32dp"/>

    </LinearLayout>

</ScrollView>
